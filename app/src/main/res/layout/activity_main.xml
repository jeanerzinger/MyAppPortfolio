<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jean.myappportfolio.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="My Nanodegree Apps!"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btPopularMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/button"
            android:text="POPULAR MOVIES"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btStockHawk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/button"
            android:text="STOCK HAWK"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btBuildItBigger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/button"
            android:text="BUILD IT BIGGER"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btMakeYourAppMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/button"
            android:text="MAKE YOUR APP MATERIAL"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btGoUbiquitous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/button"
            android:text="GO UBIQUITOUS"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/btCapstone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/button"
            android:text="CAPSTONE"
            android:textColor="@color/button_text" />

    </LinearLayout>
</LinearLayout>
